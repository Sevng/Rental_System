<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F0"
    android:gravity="center"
    android:orientation="vertical">

    <!-- 스피너 -->
    <!--이 스피너는 자기가 대여한 물건 중 뭘 반납할것인지 고르는 부분-->
    <!--사용자가 이 스피너에서 물품을 선택하면 데이터베이스에 접근해서 해당 물품의 대여기록을 받아와서 밑에 마감 일시를 띄워줘야함-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="#043353"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF8F0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:src="@drawable/charger" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:src="@drawable/return_time" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#FAF8F0"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/returnB"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="#E44652"
            android:text="Return It !!"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--현재 일시-->

    <!--반납 신청 버튼-->

</LinearLayout>
